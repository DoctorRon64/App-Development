<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamagotchiMauiApp.ButtonBrowseContentView"
             >
    
    <HorizontalStackLayout HorizontalOptions="Center">

        <ImageButton 
                x:Name="Gotofood"
                Source="button_food.png"
                Clicked="ToFoodHallFunction"
                HeightRequest="80"
                HorizontalOptions="Center"
                Aspect="AspectFit"
        />

        <ImageButton
                Source="button_home.png"
                Clicked="ToMainHallFunction"
                HorizontalOptions="Center"
                HeightRequest="80"
                Margin="20,0,0,0"
                Aspect="AspectFit"
        />

        <ImageButton 
                Source="button_slurp.png"
                Clicked="ToSlurpHallFunction"
                HorizontalOptions="Center"
                HeightRequest="80"
                Margin="20,0,0,0"
                Aspect="AspectFit"
        />

    </HorizontalStackLayout>
</ContentView>
