<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tamagotchi="clr-namespace:TamagotchiMauiApp"
             x:Class="TamagotchiMauiApp.FoodPage"
             BackgroundColor="LightBlue"
             >

    <FlexLayout 
            Direction="Column"
            AlignItems="Center"
            JustifyContent="SpaceEvenly"
            >
        <Label
                Text="Food Hall"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
                TextColor="Black"
        />

        <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" 
        />

        <Label
             x:Name="HungerAmountText"
             Text="{Binding HungerTextAmount, Mode=OneWay}"
             FontSize="24"
             HorizontalOptions="Center"
        />

        <Label
             Text="{Binding HungerText, Mode=OneWay}"
             HorizontalOptions="Center"
             Margin="20,0,0,0"
        />

        <tamagotchi:ButtonBrowseContentView />
        <tamagotchi:TimerContentView />
        
    </FlexLayout>
</ContentPage>