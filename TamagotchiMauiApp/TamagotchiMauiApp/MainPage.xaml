<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamagotchiMauiApp.MainPage">


    <ScrollView BackgroundColor="Purple">

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Gorilla Pet"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
            />

            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" 
            />

            <Label
                Text="Gegroet mijn App gebruiker"
                FontFamily="MonkeyBanana"
                FontSize="18"
                HorizontalOptions="Center" 
            />

            <Label
                x:Name="HungerAmountText"
                Text="Number of hunger"
                FontSize="24"
                HorizontalOptions="Center"
            />

            <HorizontalStackLayout HorizontalOptions="Center">
                <ImageButton 
                    x:Name="Gotofood"
                    Source="button_food.png"
                    Clicked="ToFoodHallFunction"
                    HorizontalOptions="Center"
                    HeightRequest="100"
                />

                <Button
                    x:Name="GiveFood"
                    Text="{Binding HungerText, Mode=OneWay}"
                    Clicked="GiveFood_Clicked"
                    HorizontalOptions="Center"
                    Margin="20,0,0,0"
                />

                <ImageButton 
                    Source="button_slurp.png"
                    Clicked="ToSlurpHallFunction"
                    HorizontalOptions="Center"
                    HeightRequest="100"
                    Margin="20,0,0,0"
                />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
