<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamagotchiMauiApp.MainPage">


    <ScrollView BackgroundColor="Purple">

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Gorilla Pet"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
            />

            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" 
            />

            <Label
                Text="Gegroet mijn App gebruiker"
                FontFamily="MonkeyBanana"
                FontSize="18"
                HorizontalOptions="Center" 
            />

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button
                    x:Name="Gotofood"
                    Text="Go to FoodHall"
                    Clicked="ToFoodHallFunction"
                    HorizontalOptions="Center"
                />

                <Button
                    Text="{Binding HungerText, Mode=OneWay}"
                    Clicked="GeefEten"
                    HorizontalOptions="Center"
                />

                <Button
                    Text="Go to SlurpJuice"
                    Clicked="ToSlurpHallFunction"
                    Margin="20,0,0,0"
                />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
