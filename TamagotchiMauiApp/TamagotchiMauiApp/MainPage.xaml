<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tamagotchi="clr-namespace:TamagotchiMauiApp"
             x:Class="TamagotchiMauiApp.MainPage"
             BackgroundImageSource="background_home.png"
             >

    <ScrollView>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="PetName:"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
                TextColor="Black"
            />

            <Label
                Text="{Binding PetNameText, Mode=OneWay}"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
                TextColor="Black"
            />

            <Entry
                x:Name="PetNameEntry" 
                Text="{Binding PetNameText}" 
                Completed="OnEntryCompleted" 
                IsVisible="{Binding IsEntryVisible}" 
            />

            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" 
            />

            <HorizontalStackLayout HorizontalOptions="Center">
                <tamagotchi:ButtonBrowseContentView />
            </HorizontalStackLayout>


        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
