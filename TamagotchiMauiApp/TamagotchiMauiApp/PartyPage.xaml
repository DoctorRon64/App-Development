<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamagotchiMauiApp.PartyPage"
             xmlns:tamagotchi="clr-namespace:TamagotchiMauiApp"
             Background="orange"
             >

    <FlexLayout 
            Direction="Column"
            AlignItems="Center"
            JustifyContent="SpaceEvenly"
            >
        <Label
                Text="Party"
                FontSize="52"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
                TextColor="Black"
        />

        <Label
                Text="(Social Gathering)"
                FontSize="10"
                FontFamily="DeputyJack"
                HorizontalOptions="Center" 
                TextColor="Black"
        />

        <Image
                Source="dotnet_bot.png"
                HeightRequest="250"
                HorizontalOptions="Center" 
        />

        <ImageButton
             Source="abutton_feed_party.png"
             Clicked="ImageButton_Clicked"
             HorizontalOptions="FillAndExpand"
             HeightRequest="100"
             WidthRequest="200"
             Aspect="AspectFit"
        />

        <tamagotchi:ButtonBrowseContentView />
        <tamagotchi:TimerContentView />

    </FlexLayout>
</ContentPage>